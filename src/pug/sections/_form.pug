section.contacts-page
	.container-medium
		.bredcrb
			a(href="index.html")
					+iconHome
			a(href="index.html") Главная
			a(href="contacts.html") Контакты			
			
		.page-content
			.row
				.col-md-5.col-lg-4
					.contacts-text
						.block-title
							h3 Связаться
						p Если вы заинтересованы в сотрудничестве, пожалуйста, свяжитесь с нами.
						ul
							li
								span
									i.fas.fa-map-marked-alt
								p 75 South Park Avenue, Melbourne, Australia
							li
								span
									i.fas.fa-phone-volume
								
								a(href="tel:+74955555555") +7(495)-555-55-55
							li
								span
									i.fab.fa-telegram-plane
								a(href="mailto: hello@gmail.com") hello@gmail.com
				.col-md-7.col-lg-8
					.contact-form-wrapper
						.block-title
							h3 Обратная связь
						form(action="").contact-form
							.row
								.col-md-6.col-lg-4
									.form-field
										input(type="text" name="userName" placeholder="Ваше имя")
								.col-md-6.col-lg-4
									.form-field
										input(type="text" name="userEmail" placeholder="Ваш email *")
								.col-lg-4
									.form-field
										input(type="text" name="theme" placeholder="Тема")
								.col-12
									.form-field
										textarea(name="message",  rows="3" placeholder="Сообщение")
								.col-12
									.form-btn
										button.btn отправить сообщение
							

					